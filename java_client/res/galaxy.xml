<?xml version="1.0" encoding="iso8859-2"?>
<!DOCTYPE applet [
<!ENTITY v_width "800">
<!ENTITY v_height "30">
]>
<applet>
	<panel id="_setup" layout="BoxLayout" preferredsize="&v_width;,700">
		<vbox size="&v_width;,200">
			<panel maximumsize="&v_width;,30">
				<label font="-BOLDITALIC-30" foreground="blue">Galaxy</label>
			</panel>
			<panel layout="GridBagLayout">
				<label labelfor="_name">
					<gridbagconstraints gridx="0" gridy="0" ipadx="10" anchor="GridBagConstraints.WEST" />
					Your name:
				</label>
				<textfield id="_name" columns="16" text="" tooltiptext="Your preferred in game name." >
					<gridbagconstraints gridx="1" gridy="0" anchor="GridBagConstraints.WEST" />
				</textfield>
				<label labelfor="_server">
					<gridbagconstraints gridx="0" gridy="1" anchor="GridBagConstraints.WEST" />
					Server:
				</label>
				<textfield id="_server" columns="24" text="" tooltiptext="Address of the server that hosts the game." >
					<gridbagconstraints gridx="1" gridy="1" anchor="GridBagConstraints.WEST" />
				</textfield>
				<label labelfor="_port">
					<gridbagconstraints gridx="0" gridy="2" anchor="GridBagConstraints.WEST" />
					Port:
				</label>
				<textfield id="_port" columns="5" text="5555" tooltiptext="Port that game server is bound to.">
					<gridbagconstraints gridx="1" gridy="2" anchor="GridBagConstraints.WEST" />
				</textfield>
			</panel>
			<panel>
				<button id="_connect" text="Connect !" action="submit" tooltiptext="Click me to start the game." />
			</panel>
		</vbox>
	</panel>
	<panel id="_main" layout="BoxLayout" preferredsize="&v_width;,700" visible="false">
		<vbox size="700,700">
			<panel layout="FlowLayout" maximumsize="&v_width;,30">
				<label>Emperor </label>
				<label id="_emperor"></label>
			</panel>
			<hboard id="_board" minimumsize="640,640" />
		</vbox>
	</panel>
	<!-- messagetype does not work so there is no reason to fight with it here. optionpane id="_message" visible="false" message="Your setup contains following errors:" messagetype="JOptionPane.ERROR_MESSAGE" /-->
</applet>
