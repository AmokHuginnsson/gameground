<?xml version="1.0" encoding="iso8859-2"?>
<!DOCTYPE applet [
<!ENTITY v_width "300">
<!ENTITY v_height "30">
]>
<applet>
	<panel layout="BoxLayout" preferredsize="400,400">
		<vbox size="400,201">
			<panel maximumsize="300,30">
				<label>Galaxy</label>
			</panel>
			<panel>
				<label labelfor="_name">Your name:</label>
				<textfield id="_name" columns="20" Text="" />
				<label labelfor="_server">Server:</label>
				<textfield id="_server" columns="24" Text="" />
				<label labelfor="_port">Port:</label>
				<textfield id="_port" columns="5" Text="" />
			</panel>
			<panel>
				<button id="_connect" text="Connect !" action="submit" />
			</panel>
		</vbox>
	</panel>
</applet>
