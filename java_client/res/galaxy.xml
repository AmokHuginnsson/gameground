<?xml version="1.0" encoding="iso8859-2"?>
<!DOCTYPE panel SYSTEM "res/gameground.dtd">
<panel layout="BorderLayout" background="black"><!--{{{-->
	<panel layout="GridLayout(3,2)" id="_conf" visible="false">
		<label>Emperors:</label><spinner id="_emperors"><textfield horizontalalignment="RIGHT" /></spinner>
		<label>Systems:</label><spinner id="_systems"><textfield horizontalalignment="RIGHT" /></spinner>
		<label>Board size:</label><spinner id="_boardSize"><textfield horizontalalignment="RIGHT" /></spinner>
	</panel>
	<hbox>
		<vbox>
			<hbox maximumsize="2000,&v_bar_height;" background="black">
				<label font="-BOLDITALIC-22" foreground="blue" preferredsize="80,&v_bar_height;">Galaxy</label>
				<panel background="black"> 
					<label foreground="lightGray" labelfor="_emperor" preferredsize="60,&v_bar_height;">Emperor </label>
					<label id="_emperor" preferredsize="300,&v_bar_height;" foreground="lightGray"></label>
				</panel>
				<panel minimumsize="382,&v_bar_height;" preferredsize="382,&v_bar_height;" background="black">
					<label foreground="lightGray" labelfor="_fleet">Fleet size </label>
					<textfield id="_fleet" columns="4" foreground="black" background="green" caretcolor="black" focusable="true" editable="false" layout="BorderLayout" constraints="BorderLayout.NORTH" tooltiptext="Enter number of ships You want to send in this fleet." />
					<glue preferredsize="10,1" />
					<label foreground="lightGray" labelfor="_round">
						Turn
					</label>
					<label id="_round" foreground="lightGray" preferredsize="18,&v_bar_height;" horizontalalignment="RIGHT">
						0
					</label>
					<glue preferredsize="10,1" />
					<label foreground="lightGray" labelfor="_arrival">
						arrival
					</label>
					<label id="_arrival" foreground="lightGray" preferredsize="18,&v_bar_height;" horizontalalignment="RIGHT">
						0
					</label>
					<button id="_endRound" text="End round !" action="submit" tooltiptext="Click me to end this turn." focusable="false" />
				</panel>
			</hbox>
			<hboard id="_board" preferredsize="640,640" border="MatteBorder(1,1,1,1,0000a0)" />
		</vbox>
		<vbox minimumsize="&v_sidebar_width_galaxy;,1" preferredsize="&v_sidebar_width_galaxy;,&v_height;" maximumsize="&v_sidebar_width_galaxy;,2000">
			<glue maximumsize="1,4" preferredsize="1,4" />
			<panel maximumsize="&v_sidebar_width_galaxy;,60" preferredsize="&v_sidebar_width_galaxy;,60" layout="GridBagLayout" background="black" foreground="lightGray" border="MatteBorder(1,1,0,1,0000a0)">
				<label labelfor="_systemInfo" foreground="">
					<gridbagconstraints id="gbc_1" insets="0,4,0,0" ipady="2" gridx="0" gridy="0" anchor="GridBagConstraints.WEST" />
					System:
				</label>
				<label id="_systemInfo" foreground="">
					<gridbagconstraints refid="gbc_1" gridx="1" gridwidth="3" />
				</label>
				<label labelfor="_emperorInfo" foreground="">
					<gridbagconstraints refid="gbc_1" gridy="1" />
					Emperor:
				</label>
				<label id="_emperorInfo" foreground="">
					<gridbagconstraints refid="gbc_1" gridx="1" gridy="1" gridwidth="3" />
				</label>
				<label labelfor="_productionInfo" foreground="">
					<gridbagconstraints refid="gbc_1" gridy="2" />
					Production:
				</label>
				<label id="_productionInfo" foreground="">
					<gridbagconstraints insets="0,4,0,0" gridx="1" gridy="2" weightx="1" anchor="GridBagConstraints.WEST" />
				</label>
				<label labelfor="_fleetInfo" foreground="">
					<gridbagconstraints gridx="2" gridy="2" anchor="GridBagConstraints.WEST" />
					Fleet:
				</label>
				<label id="_fleetInfo" foreground="">
					<gridbagconstraints insets="0,4,0,0" gridx="3" gridy="2" weightx="1" anchor="GridBagConstraints.WEST" />
				</label>
			</panel>
			<scrollpane border="MatteBorder(1,0,1,1,0000a0)" maximumsize="&v_sidebar_width_galaxy;,2000" autoscrolls="true">
				<textpane id="_logPad" foreground="lightGray" background="black" caretcolor="black" editable="false" focusable="false" />
			</scrollpane>
			<panel maximumsize="&v_sidebar_width_galaxy;,40" border="MatteBorder(0,0,1,1,0000a0)" background="black">
				<textfield id="_messageInput" columns="23" foreground="lightGray" background="black" caretcolor="green" focusable="true" editable="true" tooltiptext="Enter message You want to send to other emperors." border="&empty;" />
			</panel>
			<scrollpane maximumsize="&v_sidebar_width_galaxy;,80" preferredsize="&v_sidebar_width_galaxy;,80" border="MatteBorder(0,0,1,1,0000a0)">
				<textpane id="_tips" foreground="lightGray" background="black" caretcolor="black" editable="false" focusable="false">
					Wait for match to begin ...
				</textpane>
			</scrollpane>
		</vbox>
	</hbox>
</panel><!--}}}-->
