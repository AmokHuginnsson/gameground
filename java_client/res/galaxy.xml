<?xml version="1.0" encoding="iso8859-2"?>
<!DOCTYPE applet [
<!ENTITY v_width "900">
<!ENTITY v_height "700">
<!ENTITY v_port "7777">
<!ENTITY v_bar_height "30">
]>
<applet background="black">
	<panel id="_setup" layout="BoxLayout" preferredsize="&v_width;,&v_height;" focuscycleroot="true"><!--{{{-->
		<panel bounds="0,0,&v_width;,90">
			<label font="-BOLDITALIC-70" foreground="blue">Galaxy</label>
		</panel>
		<panel bounds="0,100,&v_width;,60" layout="GridBagLayout">
			<label labelfor="_name">
				<gridbagconstraints gridx="0" gridy="0" ipadx="10" anchor="GridBagConstraints.WEST" />
				Your name:
			</label>
			<textfield id="_name" columns="16" focusable="true" tooltiptext="Your preferred in game name.">
				<gridbagconstraints gridx="1" gridy="0" anchor="GridBagConstraints.WEST" />
			</textfield>
			<label labelfor="_server">
				<gridbagconstraints gridx="0" gridy="1" anchor="GridBagConstraints.WEST" />
				Server:
			</label>
			<textfield id="_server" columns="24" focusable="true" tooltiptext="Address of the server that hosts the game.">
				<gridbagconstraints gridx="1" gridy="1" anchor="GridBagConstraints.WEST" />
			</textfield>
			<label labelfor="_port">
				<gridbagconstraints gridx="0" gridy="2" anchor="GridBagConstraints.WEST" />
				Port:
			</label>
			<textfield id="_port" columns="5" text="&v_port;" focusable="true" tooltiptext="Port that game server is bound to.">
				<gridbagconstraints gridx="1" gridy="2" anchor="GridBagConstraints.WEST" />
			</textfield>
		</panel>
		<panel bounds="0,200,&v_width;,50">
			<button id="_connect" text="Connect !" action="submit" tooltiptext="Click me to start the game." />
		</panel>
	</panel><!--}}}-->
	<panel id="_main" layout="BoxLayout" background="black" preferredsize="&v_width;,&v_height;" visible="false"><!--{{{-->
		<panel bounds="0,0,90,&v_bar_height;" layout="BorderLayout" constraints="BorderLayout.TOP" background="black">
			<label font="-BOLDITALIC-22" foreground="blue">Galaxy</label>
		</panel>
		<panel bounds="90,0,180,&v_bar_height;" background="black">
			<label foreground="lightGray" labelfor="_emperor">Emperor </label>
			<label id="_emperor" foreground="lightGray"></label>
		</panel>
		<panel bounds="280,0,60,&v_bar_height;" background="black">
			<label foreground="lightGray" labelfor="_fleet">Fleet size </label>
		</panel>
		<panel bounds="340,-2,60,&v_bar_height;" background="black">
			<textfield id="_fleet" columns="4" foreground="black" background="green" carretcolor="black" focusable="true" editable="false" layout="BorderLayout" constraints="BorderLayout.NORTH" tooltiptext="Enter number of ships You want to send in this fleet." />
		</panel>
		<panel bounds="400,0,140,&v_bar_height;" background="black">
			<label foreground="lightGray" labelfor="_round" preferredsize="30,&v_bar_height;" verticalalignment="TOP">
				Turn
			</label>
			<label id="_round" foreground="lightGray" preferredsize="18,&v_bar_height;" verticalalignment="TOP" horizontalalignment="RIGHT">
				0
			</label>
			<label foreground="lightGray" labelfor="_arrival" preferredsize="40,&v_bar_height;" verticalalignment="TOP" horizontalalignment="RIGHT">
				arrival
			</label>
			<label id="_arrival" foreground="lightGray" preferredsize="18,&v_bar_height;" verticalalignment="TOP" horizontalalignment="RIGHT">
				0
			</label>
		</panel>
		<panel bounds="540,-5,99,&v_bar_height;" background="black">
			<button id="_endRound" text="End round !" action="submit" tooltiptext="Click me to end this turn." focusable="false" />
		</panel>
		<panel bounds="639,0,261,60" layout="GridBagLayout" background="black" foreground="lightGray" border="MatteBorder(1,1,0,1,0000a0)">
			<label labelfor="_systemInfo" foreground="">
				<gridbagconstraints id="gbc_1" insets="0,4,0,0" ipady="2" gridx="0" gridy="0" anchor="GridBagConstraints.WEST" />
				System:
			</label>
			<label id="_systemInfo" foreground="">
				<gridbagconstraints refid="gbc_1" gridx="1" gridwidth="3" />
			</label>
			<label labelfor="_emperorInfo" foreground="">
				<gridbagconstraints refid="gbc_1" gridy="1" />
				Emperor:
			</label>
			<label id="_emperorInfo" foreground="">
				<gridbagconstraints refid="gbc_1" gridx="1" gridy="1" gridwidth="3" />
			</label>
			<label labelfor="_productionInfo" foreground="">
				<gridbagconstraints refid="gbc_1" gridy="2" />
				Production:
			</label>
			<label id="_productionInfo" foreground="">
				<gridbagconstraints insets="0,4,0,0" gridx="1" gridy="2" weightx="1" anchor="GridBagConstraints.WEST" />
			</label>
			<label labelfor="_fleetInfo" foreground="">
				<gridbagconstraints gridx="2" gridy="2" anchor="GridBagConstraints.WEST" />
				Fleet:
			</label>
			<label id="_fleetInfo" foreground="">
				<gridbagconstraints insets="0,4,0,0" gridx="3" gridy="2" weightx="1" anchor="GridBagConstraints.WEST" />
			</label>
		</panel>
		<hboard id="_board" bounds="0,&v_bar_height;,640,640" border="MatteBorder(1,1,1,1,0000a0)" />
		<scrollpane bounds="640,60,260,550" border="MatteBorder(1,0,1,1,0000a0)" autoscrolls="true">
			<textpane id="_log" foreground="lightGray" background="black" carretcolor="black" editable="false" focusable="false" />
		</scrollpane>
		<scrollpane bounds="640,610,260,60" border="MatteBorder(0,0,1,1,0000a0)">
			<textpane id="_tips" foreground="lightGray" background="black" carretcolor="black" editable="false" focusable="false">
				Wait for match to begin ...
			</textpane>
		</scrollpane>
	</panel><!--}}}-->
	<!-- messagetype does not work so there is no reason to fight with it here. optionpane id="_message" visible="false" message="Your setup contains following errors:" messagetype="JOptionPane.ERROR_MESSAGE" /-->
</applet>
