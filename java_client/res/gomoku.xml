<?xml version="1.0" encoding="iso8859-2"?>
<!DOCTYPE panel SYSTEM "res/gameground.dtd">
<panel layout="BorderLayout" border="EmptyBorder(4,4,4,4)"><!--{{{-->
	<setup id="_conf" visible="false" />
	<hbox>
		<panel layout="GridBagLayout">
			<gridbagconstraints fill="GridBagConstraints.BOTH" />
			<goban id="_board" opaque="true" />
		</panel>
		<vbox minimumsize="&v_sidebar_width_galaxy;,1" preferredsize="&v_sidebar_width_galaxy;,&v_height;" maximumsize="&v_sidebar_width_galaxy;,2000">
			<panel maximumsize="2000,40" border="EmptyBorder(0,4,4,4)">
				<layout type="FormLayout" columns="36px,8px,p,8px,p" rows="p" />
				<label id="_toMove" constraints="1,1">None</label>
				<label constraints="3,1">to move, move </label>
				<label id="_move" constraints="5,1">0</label>
			</panel>
			<vbox maximumsize="2000,240">
				<panel border="EtchedBorder" layout="BorderLayout">
					<panel border="EmptyBorder(4,4,4,4)">
						<layout type="FormLayout" columns="p,10px,40px:grow,10px,p,10px,40px" rows="p,4px,p,4px,p,4px,p" />
						<label text="Player Black:" constraints="1,1" />
						<label id="_blackName" text="Name Huge Enormously" constraints="3,1,5,1" />
						<label text="Score:" constraints="1,3" />
						<label id="_blackScore" text="0" constraints="3,3" />
						<button id="_blackSit" text="Sit !" action="onBlack" constraints="1,7" />
					</panel>
				</panel>
				<panel border="EtchedBorder" layout="BorderLayout">
					<panel border="EmptyBorder(4,4,4,4)">
						<layout type="FormLayout" columns="p,10px,40px:grow,10px,p,10px,40px" rows="p,4px,p,4px,p,4px,p" />
						<label text="Player White:" constraints="1,1" />
						<label id="_whiteName" text="Name Huge Enormously" constraints="3,1,5,1" />
						<label text="Score:" constraints="1,3" />
						<label id="_whiteScore" text="0" constraints="3,3" />
						<button id="_whiteSit" text="Sit !" action="onWhite" constraints="1,7" />
					</panel>
				</panel>
			</vbox>
			<scrollpane autoscrolls="true" maximumsize="2000,120">
				<list id="_visitors" initclass="javax.swing.DefaultListModel" focusable="false" tooltiptext="People that are visiting this table." />
			</scrollpane>
			<scrollpane autoscrolls="true">
				<textpane id="_logPad" editable="false" focusable="false" />
			</scrollpane>
			<panel maximumsize="&v_sidebar_width_galaxy;,40" layout="BorderLayout">
				<textfield id="_messageInput" focusable="true" editable="true" action="onMessage" constraints="BorderLayout.NORTH" tooltiptext="Enter message You want to send to other players." />
			</panel>
			<hbox>
				<glue maximumsize="1000,1"/>
				<button text="Exit !" action="onExit" tooltiptext="Abandon this match." />
			</hbox>
		</vbox>
	</hbox>
</panel><!--}}}-->
