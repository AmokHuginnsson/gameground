<?xml version="1.0" encoding="iso8859-2"?>
<!DOCTYPE dialog SYSTEM "res/gameground.dtd">
<dialog title="Create a new game ..." modal="true" size="320,240" resizable="false" focuscycleroot="true" defaultCloseOperation="JDialog.DISPOSE_ON_CLOSE"><!--{{{-->
	<vbox border="EmptyBorder(8,8,8,8)">
		<hbox size="320,220">
			<vbox border="TitledBorder(EmptyBorder,Game type ...,TitledBorder.LEFT, TitledBorder.ABOVE_TOP)">
				<scrollpane>
					<list id="_logics" selectionmode="ListSelectionModel.SINGLE_SELECTION" focusable="true" tooltiptext="Available game types." />
				</scrollpane>
			</vbox>
			<vbox preferredsize="170,220">
				<panel>
					<label>Name:</label>
					<textfield id="_name" columns="13" action="onEditChange" focusable="true" requestFocusEnabled="true" tooltiptext="Name for newly created game." />
				</panel>
				<panel id="_confHolder" preferredsize="200,200" border="TitledBorder(EtchedBorder,Configuration ...)">
				</panel>
			</vbox>
		</hbox>
		<panel>
			<button id="_ok" text="OK" action="onOk" enabled="false" focusable="true" />
			<button text="Cancel" action="onCancel" />
		</panel>
	</vbox>
</dialog><!--}}}-->
