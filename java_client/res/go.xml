<?xml version="1.0" encoding="iso8859-2"?>
<!DOCTYPE panel SYSTEM "res/gameground.dtd">
<panel layout="BorderLayout"><!--{{{-->
	<panel id="_conf" visible="false">
		<layout type="FormLayout" columns="p,p" rows="p,p,p,p,p,p" />
		<label constraints="1,1">Goban:</label><combobox id="_confGoban" constraints="2,1" tooltiptext="Goban size." />
		<label constraints="1,2">Komi:</label><spinner id="_confKomi" constraints="2,2" tooltiptext="Komi."><textfield horizontalalignment="RIGHT" /></spinner>
		<label constraints="1,3">Handicaps:</label><spinner id="_confHandicaps" constraints="2,3" tooltiptext="Handicaps."><textfield horizontalalignment="RIGHT" /></spinner>
		<label constraints="1,4">Main time:</label><spinner id="_confMainTime" constraints="2,4" tooltiptext="Time for main game."><textfield horizontalalignment="RIGHT" /></spinner>
		<label constraints="1,5">Byo yomi periods:</label><spinner id="_confByoYomiPeriods" constraints="2,5" tooltiptext="Number of byo yomi periods."><textfield horizontalalignment="RIGHT" /></spinner>
		<label constraints="1,6">Byo yomi time:</label><spinner id="_confByoYomiTime" constraints="2,6" tooltiptext="Time for single byo yomi period."><textfield horizontalalignment="RIGHT" /></spinner>
	</panel>
	<hbox>
		<vbox>
		</vbox>
		<vbox minimumsize="&v_sidebar_width_galaxy;,1" preferredsize="&v_sidebar_width_galaxy;,&v_height;" maximumsize="&v_sidebar_width_galaxy;,2000">
			<scrollpane autoscrolls="true">
				<textpane id="_logPad" editable="false" focusable="false" />
			</scrollpane>
			<panel maximumsize="&v_sidebar_width_galaxy;,40" layout="BorderLayout">
				<textfield id="_messageInput" focusable="true" editable="true" action="onMessage" constraints="BorderLayout.NORTH" tooltiptext="Enter message You want to send to other players." />
			</panel>
			<hbox>
				<glue maximumsize="1000,1"/>
				<button id="_exit" text="Exit !" action="onExit" tooltiptext="Abandon this match." />
			</hbox>
		</vbox>
	</hbox>
</panel><!--}}}-->
