<?xml version="1.0" encoding="iso8859-2"?>
<!DOCTYPE panel SYSTEM "res/gameground.dtd">
<panel layout="BorderLayout" focuscycleroot="true" border="&X;red)"><!--{{{-->
	<vbox><glue maximumsize="1,10" preferredsize="1,10" />
	<hbox border="&X;green)"><glue maximumsize="10,1" preferredsize="10,1" />
		<panel layout="BorderLayout" preferredsize="600,&v_height;" constraints="BorderLayout.CENTER" focuscycleroot="true" border="&X;red)"><!--{{{-->
			<vbox border="&X;cyan)">
				<scrollpane autoscrolls="true">
					<textpane id="_logPad" caretcolor="white" editable="false" focusable="false" />
				</scrollpane>
				<textfield id="_msg" maximumsize="2000,20" columns="16" focusable="true" tooltiptext="Send message to all people on the server that are currently not in the game." />
			</vbox>
		</panel>
		<glue maximumsize="10,1" preferredsize="10,1" />
		<panel minimumsize="300,1" preferredsize="300,&v_height;" maximumsize="300,2000" layout="BorderLayout" constraints="BorderLayout.CENTER" focuscycleroot="true" border="&X;red)"><!--{{{-->
			<vbox border="&X;blue)">
				<hbox border="&X;magenta)">
					<scrollpane autoscrolls="true">
						<list id="_games" />
					</scrollpane>
					<scrollpane autoscrolls="true">
						<list id="_people" />
					</scrollpane>
				</hbox>
				<hbox maximumsize="2000,80" border="&X;orange)">
					<panel layout="GridBagLayout" border="&X;red)">
						<button id="_join" text="Join !" action="submit" tooltiptext="Click me to start the game.">
							<gridbagconstraints id="gbcJoin" gridx="0" gridy="0" ipadx="50" insets="8,8,0,8" fill="GridBagConstraints.BOTH" />
						</button>
						<button id="_create" text="Create !" action="submit" tooltiptext="Click me to start the game.">
							<gridbagconstraints use="gbcJoin" gridy="1" />
						</button>
					</panel>
				</hbox>
			</vbox>
		</panel>
		<glue maximumsize="10,1" preferredsize="10,1" /></hbox>
	<glue maximumsize="1,10" preferredsize="1,10" /></vbox>
</panel><!--}}}-->
