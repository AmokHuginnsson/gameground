<?xml version="1.0" encoding="iso8859-2"?>
<!DOCTYPE panel SYSTEM "res/gameground.dtd">
<panel layout="BorderLayout"><!--{{{-->
	<layout type="FormLayout" columns="p,4px,p,p:grow" rows="p,4px,p,4px,p,4px,p,4px,p" />
	<label constraints="1,1">Scoring system:</label><combobox id="_scoringSystem" constraints="3,1,2,1" tooltiptext="Chose the way the score is counted." />
	<label constraints="1,3">Players:</label><spinner id="_playerCount" constraints="3,3" tooltiptext="Minimum number of players to start the match."><textfield horizontalalignment="RIGHT" /></spinner>
	<label constraints="1,5">Round time:</label><spinner id="_roundTime" constraints="3,5" tooltiptext="Length of one round expressed in seconds."><textfield horizontalalignment="RIGHT" /></spinner>
	<label constraints="1,7">Number of rounds:</label><spinner id="_maxRounds" constraints="3,7" tooltiptext="You guessed right, number of rounds for whole match."><textfield horizontalalignment="RIGHT" /></spinner>
	<label constraints="1,9">Inter round delay:</label><spinner id="_interRoundDelay" constraints="3,9" tooltiptext="Interval between rounds expressed in seconds."><textfield horizontalalignment="RIGHT" /></spinner>
</panel>
